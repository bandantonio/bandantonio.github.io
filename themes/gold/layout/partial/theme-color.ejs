<style>
  a:not(.icon) {
    color: #<%= theme.theme_color %>;
    text-decoration: none;
    background-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 50%,
      #<%= theme.theme_color %> 50%
    );
  }

  body a:not(.icon):hover {
    color: #fff;
  }

  #lightBtn i {
    color: #<%= theme.theme_color %>;
    text-shadow: 1px 1px 10px #<%= theme.theme_color %>;
  }

  body.darkmode a:not(.icon) {
    color: #<%= theme.theme_dark_color %>;
    text-decoration: none;
    background-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 50%,
      #<%= theme.theme_dark_color %> 50%
    );
  }

  body.darkmode a:not(.icon):hover {
    color: #000;
  }

  body.darkmode #lightBtn i {
    color: #<%= theme.theme_dark_color %>;
    text-shadow: 1px 1px 10px #<%= theme.theme_dark_color %>;
  }

  blockquote {
    border-left: 8px solid #<%= theme.theme_color %>;
  }

  .button.button-primary:hover,
  button.button-primary:hover,
  input[type="submit"].button-primary:hover,
  input[type="reset"].button-primary:hover,
  input[type="button"].button-primary:hover,
  .button.button-primary:focus,
  button.button-primary:focus,
  input[type="submit"].button-primary:focus,
  input[type="reset"].button-primary:focus,
  input[type="button"].button-primary:focus {
    background-color: #<%= theme.theme_color %>;
    border-color: #<%= theme.theme_color %>;
  }
  input[type="email"]:focus,
  input[type="number"]:focus,
  input[type="search"]:focus,
  input[type="text"]:focus,
  input[type="tel"]:focus,
  input[type="url"]:focus,
  input[type="password"]:focus,
  textarea:focus,
  select:focus {
    border: 1px solid #<%= theme.theme_color %>;
  }
</style>