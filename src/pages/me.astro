---
import BaseLayout from "@layouts/BaseLayout.astro";
import GoHomeArrow from "@components/GoHomeArrow.astro";
import { Icon } from "astro-icon";
import { getCollection } from 'astro:content';
const me = await getCollection('me');
---

<BaseLayout title="About me">
    <GoHomeArrow getBackTo="/" title="Home" />
    <div class="flex flex-col h-screen mx-auto sm:max-w-xl md:max-w-2xl lg:max-w-3xl xl:max-w-4xl">
        <p>Hi stranger and welcome to my little space.</p>

        <div class="my-4">
            <h2 class="text-lg font-bold text-mg-accent">My passions</h2>
            <ul class="grid grid-cols-2 gap-x-10 gap-y-2 my-4">
                <li>👨🏻‍💻 Coding</li>
                <li>🌎 Traveling</li>
                <li>🏂 Snowboarding</li>
                <li>📚 Reading</li>
            </ul>
        </div>
        <div class="my-4">
            <h2 class="text-lg font-bold text-mg-accent">Tools and technologies I use</h2>
            <ul class="grid grid-cols-2 gap-x-10 gap-y-2 my-4">
                {
                    me[0].data.list.map((item) => (                       
                        <li><Icon class="inline-block mx-2" name={item.icon} size="20" />{item.name}</li>
                    ))

                }
            </ul>
        </div>
    </div>
</BaseLayout>